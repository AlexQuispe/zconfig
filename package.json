{
  "name": "zconfig",
  "version": "0.1.1",
  "description": "zconfig CLI",
  "private": false,
  "bin": {
    "zconfig": "bin/zconfig"
  },
  "scripts": {
    "clean-build": "rm -rf build",
    "compile": "tsc --project tsconfig.json",
    "build": "npm run clean-build && npm run compile",
    "dev": "ts-node src/main.ts",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "prettier --write src",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest src"
  },
  "files": [
    "bin",
    "build",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexQuispe/zconfig.git"
  },
  "author": "Alex Quispe <q.wilmer.alex@gmail.com>",
  "bugs": {
    "url": "https://github.com/AlexQuispe/zconfig/issues"
  },
  "homepage": "https://github.com/AlexQuispe/zconfig#readme",
  "license": "MIT",
  "dependencies": {
    "commander": "^9.4.1",
    "git-diff": "^2.0.6",
    "glob": "^8.0.3",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/git-diff": "^2.0.3",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.2.3",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
